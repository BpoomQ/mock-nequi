<% include partials/_head %>
<% include partials/_header-inside %>
<div class="container">
	<div class="row" align="center">
		<div class="col-7 shadow p-3 mb-5 bg-white rounded">
			<table class="table table-hover" >
        <tr>
          <td><h3>Saldo disponible en cuenta:</h3></td>
          <td><h3 class="text-muted">$ <%= user.account.accountBalance %></h3></td>
        </tr>
        <tr>
          <td><h3>Saldo en el colchón:  </h3></td>
          <td><h3 class="text-muted">$ <%= user.account.mattress.mattressBalance %></h3></td>
        </tr>
      </table>
		</div>

		<div class="col-5 shadow p-3 mb-5 bg-white rounded">
			<h2>Mover saldo a colchón </h2>
			<form class="form-inline" action="/addMoneyToMattress" method="POST">
				<div class="col-4"></div>
				<div class="input-group">
					<input type="number" class="form-control" min="1" max="<%= user.account.accountBalance %>" name="money" placeholder="A Colchon" required>
					<input type="text" value="<%= user._id %>" name="userId" hidden>
				</div>
				<button type="submit" class="btn btn-outline-success">Mover</button>
			</form><br>
			<h2>Mover saldo a cuenta</h2>
			<form class="form-inline" action="/returnMoneyToAccount" method="POST">
				<div class="col-4"></div>
				<div class="input-group">
					<input type="number" class="form-control" min="1" max="<%= user.account.mattress.mattressBalance %>" name="money" placeholder="A Cuenta" required>
					<input type="text" value="<%= user._id %>" name="userId" hidden>
				</div>
				<button type="submit" class="btn btn-outline-success">Mover</button>
			</form>
		</div>
	</div>
</div>
