<% include partials/_head %>
<% include partials/_header-login %>
<% if(loginMessage.length>0){ %>
  <div class="alert alert-danger" align="center">
    <%= loginMessage %>
  </div>
<% } %>
<% if(signinMessage.length>0){ %>
  <div class="alert alert-warning" align="center">
    <%= signinMessage %>
  </div>
<% } %>
    <div class="container row" align="center">
      <div class="col-4"></div>
      <div class="col-6 shadow p-3 mb-5 bg-white rounded" align="center">
        <h1>Registrate</h1><br>
        <form method="POST" action="/add" novalidate>
          <div class="form-group row">
            <label for="labeluser" class="col-2">Nombre: </label>
            <div class="input-group col">
              <input type="text" name="name" class="form-control " placeholder="Ingresa tu nombre" required>
            </div>
            <div class="input-group col">
              <input type="text" name="lastName" class="form-control " placeholder="Ingresa tu apellido" required>
            </div>
          </div>
          <div class="form-group row">
            <label for="labeluser" class="col-4">Email: </label>
            <input type="email" name="email" class="col-7 form-control" placeholder="Ingresa tu correo" required>
          </div>
          <div class="form-group row">
            <label for="labelContraseña" class="col-4">Contraseña: </label>
            <input type="password" name="password" class="col-7 form-control" placeholder="Ingresa tu contraseña" required>
          </div>
          <button type="submit" class="btn btn-outline-success btn-block">Registrar</button>
        </form>
        <br>
      </div>
    </div>
<% include partials/_footer %>
