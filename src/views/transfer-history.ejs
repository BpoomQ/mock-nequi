<% include partials/_head %>
<% include partials/_header-inside %>
<div class="container "align="center">
  <div class="col-5">
  </div>
  <div class="col-7 container shadow p-2 mb-5 bg-white rounded">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Destinatario</th>
          <th scope="col">Monto Transferido</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < transfers.length; i++) { %>
          <% if(transfers[i].sender.toString() == user._id.toString()){ %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= transfers[i].addressee.name %></td>
            <td><%= transfers[i].amount %></td>
          </tr>
        <%}}%>
      </tbody>
    </table>
  </div>
</div>
<% include partials/_footer %>
